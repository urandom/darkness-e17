/* vim: set sw=3: */
#define WEATHER_ICON(icon_code, file_code, minw, minh, maxw, maxh, a) \
images { \
   image: "weather_"file_code".png" COMP; \
} \
group { \
   name: "modules/forecasts/icons/"icon_code; \
   min: minw minh; \
   max: maxw maxh; \
   parts { \
      part { \
	 name: "icon"; \
	 description { \
	    state: "default" 0.0; \
	    aspect: a a; \
	    aspect_preference: BOTH; \
	    image { \
	       normal: "weather_"file_code".png"; \
	    } \
	    fill { \
	       smooth: 1; \
	    } \
	 } \
      } \
   } \
}

group {
   name: "modules/forecasts/main";
   parts {
      part {
	 name:           "base";
	 type:           RECT;
	 mouse_events:   1;
	 description {
	    state: "default" 0.0;
	    color: 255 255 255 0;
	 }
      }
      part {
	 name:         "icon";
	 type:         SWALLOW;
	 mouse_events: 0;
	 description {
	    state:    "default" 0.0;
	    aspect_preference: BOTH;
	    align:    0.5 0.5;
	    rel1 {
	       relative: 0.0 0.0;
	       offset:   0   0;
	    }
	    rel2 {
	       relative: 1.0 1.0;
	       offset:   -1  -1;
	    }
	 }
      }
      part {
	 name:         "e.text.temp";
	 type:         TEXT;
	 effect:       SOFT_SHADOW;
	 mouse_events: 0;
	 description {
	    state: "default" 0.0;
	    align: 0.0 0.0;
	    rel1 {
	       relative: 0.0 0.0;
	       offset: 5 4;
	    }
	    rel2 {
	       relative: 1.0 1.0;
	       offset: -1 -1;
	       to: "icon";
	    }
	    color:  255 255 255 255;
	    color3: DARKNESS_BLUE 170;
	    text {
	       text:  "";
	       font:  "DejaVu-Bold";
	       size:  10;
	       min:   1 1;
	       align: 0.0 0.0;
	       text_class: "module_large";
	    }
	 }
      }
      part {
	 name:         "e.text.description";
	 type:         TEXT;
	 effect:       OUTLINE_SOFT_SHADOW;
	 mouse_events: 0;
	 description {
	    state: "default" 0.0;
	    rel1 {
	       relative: 0.0 1.0;
	       offset:   -1  -1;
	       to_x:     "icon";
	       to_y:     "e.text.temp";
	    }
	    rel2 {
	       relative: 1.0 1.0;
	       offset:   -1  -10;
	       to_x:     "icon";
	    }
	    color:  255 255 255 255;
	    color3:   0   0   0  60;
	    text {
	       text:  "";
	       font:  "DejaVu-Bold";
	       size:  9;
	       min:   1 1;
	       align: 0.5 0.5;
	       text_class: "module_normal";
	    }
	 }
	 description {
	    state: "hidden" 0.0;
	    inherit: "default" 0.0;
	    visible: 0;
	 }
      }
   }
   programs {
      program {
	 name: "text_hide";
	 signal: "e,state,description,hide";
	 source: "e";
	 action: STATE_SET "hidden" 0.0;
	 target: "e.text.description";
      }
      program {
	 name: "text_show";
	 signal: "e,state,description,show";
	 source: "e";
	 action: STATE_SET "default" 0.0;
	 target: "e.text.description";
      }
   }
}
