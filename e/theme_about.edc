/* vim: set sw=3: */
#define PARTICLE_PART(NUM, SIZE, OFFX, OFFY) \
      part { \
	 name:          "particle"NUM; \
	 type: 	        IMAGE; \
	 mouse_events:  0; \
	 description { \
	    state:      "default" 0.0; \
	    min:        SIZE SIZE; \
	    max:        SIZE SIZE; \
	    visible:    1; \
	    image { \
	       normal:   "particle.png"; \
	    } \
	    rel1 { \
		offset: OFFX OFFY; \
	    } \
	    rel2 { \
		offset: OFFX OFFY; \
	    } \
	 } \
      } \

#define PARTICLE_PROGRAM(NUM, DELAY) \
      program { \
	 name: "init"NUM; \
	 signal: "show"; \
	 after: "particle"NUM; \
      } \
      program { \
	 name: "particle"NUM; \
	 script { \
	    new Float:x; \
	    new Float:y; \
\
	    x = randf(); \
	    y = randf(); \
	    custom_state(PART:"particle"NUM, "default", 0.0); \
	    set_state_val(PART:"particle"NUM, STATE_REL1, x, y); \
	    set_state_val(PART:"particle"NUM, STATE_REL2, x, y); \
	    set_state_val(PART:"particle"NUM, STATE_COLOR, 255, 255, 255, 50); \
	 } \
	 after: "delay"NUM; \
      } \
      program { \
	 name: "delay"NUM; \
	 transition: ACCELERATE DELAY; \
	 action: STATE_SET "custom" 0.0; \
	 target: "particle"NUM; \
	 after: "p"NUM"def"; \
      } \
      program { \
	 name: "p"NUM"def"; \
	 action: STATE_SET "default" 0.0; \
	 target: "particle"NUM; \
	 after: "particle"NUM; \
      } \
      program { \
	 name: "terminate"NUM; \
	 signal: "hide"; \
	 action: ACTION_STOP; \
	 target: "p"NUM"def"; \
	 target: "particle"NUM; \
	 target: "delay"NUM; \
      } \

styles
{
   style {
      name: "theme_about_style";
      base: "font=DejaVu style=glow color=#fff glow2_color=#38526DA0 glow_color=#263E57EA font_size=12 align=center wrap=word";

      tag:  "br" "\n";
      tag:  "hilight" "+ font=DejaVu-Bold";
      tag:  "invisible" "+ font=DejaVu font_size=7 style=none color=#0002";
   }
}

