group {
   name: "e/desklock/background";
   parts {
      part {
	 name: "background";
	 type: RECT;
	 mouse_events: 0;
	 description {
	    state: "default" 0.0;
	    color: 6 6 6 255;
	 }
      }
      part {
	 name: "background_image";
	 mouse_events: 0;
	 description {
	    state: "default" 0.0;
	    aspect: 8.609865471 8.609865471;
	    aspect_preference: HORIZONTAL;
	    align: 0.5 1;
	    max: 1920 223;
	    image {
	       normal: "pan3-lock.jpg";
	    }
	 }
      }
      part {
	 name: "shadow";
	 type: GRADIENT;
	 mouse_events: 0;
	 description {
	    state: "default" 0.0;
	    gradient {
	       spectrum: "invert_shadow";
	       type: "linear";
	    }
	    fill {
	       angle: 0;
	       spread: 0;
	    }
	    rel1 {
	       relative: 0.0 0.0;
	       offset: 0 -25;
	       to: "background_image";
	    }
	    rel2 {
	       relative: 1.0 0.0;
	       to: "background_image";
	    }
	 }
      }
   }
}

